(defun LevenshteinDistance (x y)
  (let* ((lenx (1+ (length x)))
         (leny (1+ (length y)))
         (dp (make-array (list lenx leny) :element-type 'fixnum :initial-element 0)))

    ;;; 初始化第一列(字符串x)
    (loop for i from 1 below lenx
          do (setf (aref dp i 0) i))

    ;;; 初始化第一行(字符才y)
    (loop for j from 1 below leny 
          do (setf (aref dp 0 j) j))

    (loop for j from 1 below leny
          do (loop for i from 1 below lenx 
                   if (char= (aref y j) (aref x i))
                   do (setf (aref dp i j) (aref dp (1- i) (1- j)))
                   else 
                   do (setf (aref dp i j)
                            (1+ 
                             (min 
                               (aref dp (1- i) j)
                               (aref dp i (1- j))
                               (aref dp (1- i) (1- j)))))))

    (aref dp (1- lenx) (1- leny))))
